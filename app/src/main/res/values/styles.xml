<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <style name="PanelHeading">
        <item name="android:textSize">@dimen/panel_heading_text_size</item>
        <item name="android:textColor">#ffe67e22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#faaa</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="PanelRowHeader">
        <item name="android:textSize">@dimen/panel_row_header_text_size</item>
        <item name="android:textColor">#f000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PanelRowContent">
        <item name="android:textSize">@dimen/panel_row_content_text_size</item>
        <item name="android:textColor">#f000</item>
    </style>
</resources>
